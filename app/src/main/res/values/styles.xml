<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="round">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6%</item>
    </style>
    <style name="round9">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6%</item>
    </style>




    <style name="edit_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/gray_text_color</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:background">@drawable/background_search</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>

    <style name="btn_log_in_style">
        <item name="android:background">@drawable/background_sign_in</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>


    <style name="verification">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

<!--news styles-->

    <style name="profile_style">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_text_color</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>


    <style name="arrow_style">
        <item name="cornerSize">25%</item>
    </style>


    <style name="rounded">
        <item name="cornerSize">7%</item>
    </style>
    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="circle2">
        <item name="cornerSize">5%</item>
    </style>
    <style name="replyFragTheme">
        <item name="colorSecondary">@color/teal_200</item>
    </style>
    <style name="cancelButtonTheme">
        <item name="colorSecondary">#0000FAFF</item>
    </style>
    <!-- custom bottom sheet dialog -->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>
    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>
    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="roundedSetting">
        <item name="cornerSize">25%</item>
    </style>

<!--    overview-->

    <style name="rounded_image_bg">
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>
    <style name="toolBarLayout">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="toolBarLayout2">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
    </style>
    <style name="roundedImage">
        <item name="cornerSize">12dp</item>
    </style>
    <style name="map_button_style">
        <item name="colorSecondary">#1A84D0</item>
        <item name="cornerSize">18dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="circlePic">
        <item name="cornerSize">50%</item>
    </style>

<!--    favorite-->
    <style name="text_big">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

<!--    bottom sheet styles-->
    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="defaultshapeappearanceoverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">1%</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/blue_logo</item>
        <item name="android:textColorSecondary">@color/blue_logo</item>
    </style>


    <style name="slidingBarStyle" parent="Widget.MaterialComponents.Slider" >
        <item name="background" >@color/blue_logo</item>
    </style>
</resources>