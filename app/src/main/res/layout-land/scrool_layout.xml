<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/marginStart">
        <TextView
            android:id="@+id/place_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/beautiful_city"
            android:textSize="@dimen/titlesSize"
            android:textColor="@color/secondaryColor"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/nunito_bold"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="40dp"/>
        <TextView
            android:id="@+id/rate_reviews_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_4_1_1024_reviews"
            android:textColor="@color/starColor"
            android:textSize="@dimen/subTitlesSize"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:fontFamily="@font/nunito_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/subTitlesSize"
        android:text="@string/overview"
        android:textColor="@color/secondaryColor"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/marginStart"/>
    <TextView
        android:id="@+id/place_description"
        android:textSize="@dimen/defaultTextSize"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/marginStart"
        android:text="@string/longText"
        android:textColor="@color/normalTextColor"
        android:maxLines="4"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">
        <LinearLayout
            android:layout_marginEnd="@dimen/itemMarginEnd"
            android:orientation="vertical"
            android:layout_width="@dimen/itemWidth"
            android:layout_height="@dimen/itemHeight"
            android:background="@drawable/complete_rounded_bg"
            android:id="@+id/articles"
            android:clickable="true">
            <ImageView
                android:layout_marginTop="@dimen/iconMarginTop"
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:src="@drawable/article"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:fontFamily="@font/nunito_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/titleMaxHeight"
                android:textStyle="bold"
                android:text="@string/articles"
                android:textColor="@color/secondaryColor"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginEnd="@dimen/itemMarginEnd"
            android:orientation="vertical"
            android:layout_width="@dimen/itemWidth"
            android:layout_height="@dimen/itemHeight"
            android:background="@drawable/complete_rounded_bg"
            android:id="@+id/Reviews"
            android:clickable="true">
            <ImageView
                android:layout_marginTop="@dimen/iconMarginTop"
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:src="@drawable/reviews"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:fontFamily="@font/nunito_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/titleMaxHeight"
                android:textStyle="bold"
                android:text="@string/reviews"
                android:textColor="@color/secondaryColor"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginEnd="@dimen/itemMarginEnd"
            android:orientation="vertical"
            android:layout_width="@dimen/itemWidth"
            android:layout_height="@dimen/itemHeight"
            android:background="@drawable/complete_rounded_bg"
            android:id="@+id/restaurants"
            android:clickable="true">
            <ImageView
                android:layout_marginTop="@dimen/iconMarginTop"
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:src="@drawable/restaurant"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:fontFamily="@font/nunito_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/titleMaxHeight"
                android:textStyle="bold"
                android:text="restaurants"
                android:textColor="@color/secondaryColor"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/itemWidth"
            android:layout_height="@dimen/itemHeight"
            android:background="@drawable/complete_rounded_bg"
            android:id="@+id/hotels"
            android:clickable="true">
            <ImageView
                android:layout_marginTop="@dimen/iconMarginTop"
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:src="@drawable/hotel"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:fontFamily="@font/nunito_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/titleMaxHeight"
                android:textStyle="bold"
                android:text="@string/hotels"
                android:textColor="@color/secondaryColor"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:fontFamily="@font/nunito_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/others"
        android:textSize="@dimen/subTitlesSize"
        android:textColor="@color/secondaryColor"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/marginStart"
        android:layout_marginVertical="20dp"/>
    <LinearLayout
        android:background="@drawable/complete_rounded_bg2"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/marginStart">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryColor"
                android:textSize="@dimen/normalTextSize"
                android:text="Address:"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/place_address"
                android:textSize="@dimen/defaultTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textColor="@color/normalTextColor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryColor"
                android:textSize="@dimen/normalTextSize"
                android:text="Price:"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/place_price"
                android:textSize="@dimen/defaultTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cheap"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textColor="@color/normalTextColor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryColor"
                android:textSize="@dimen/normalTextSize"
                android:text="Popularity:"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/place_popularity"
                android:textSize="@dimen/defaultTextSize"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:text="8/10"
                android:textStyle="bold"
                android:textColor="@color/normalTextColor"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryColor"
                android:textSize="@dimen/normalTextSize"
                android:text="Distance From Local State:"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/place_distance"
                android:textSize="@dimen/defaultTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500m"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textColor="@color/normalTextColor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryColor"
                android:textSize="@dimen/normalTextSize"
                android:text="Phone Number:"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/place_phone_number"
                android:textSize="@dimen/defaultTextSize"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:text="05378912"
                android:textStyle="bold"
                android:textColor="@color/normalTextColor"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryColor"
                android:textSize="@dimen/normalTextSize"
                android:text="Web Site:"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/place_web_site"
                android:textSize="@dimen/defaultTextSize"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:text="www.esi_sba.dz"
                android:textStyle="bold"
                android:textColor="@color/normalTextColor"
                />
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:fontFamily="@font/nunito_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gallery"
        android:textSize="@dimen/subTitlesSize"
        android:textColor="@color/secondaryColor"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/marginStart"
        android:layout_marginVertical="20dp"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/picSize"
            android:layout_height="@dimen/picSize"
            app:shapeAppearanceOverlay="@style/roundedImage"
            android:src="@drawable/image"
            android:scaleType="centerCrop"
            android:layout_marginEnd="@dimen/picMarginEnd"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/picSize"
            android:layout_height="@dimen/picSize"
            app:shapeAppearanceOverlay="@style/roundedImage"
            android:src="@drawable/image"
            android:scaleType="centerCrop"
            android:layout_marginEnd="@dimen/picMarginEnd"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/picSize"
            android:layout_height="@dimen/picSize"
            app:shapeAppearanceOverlay="@style/roundedImage"
            android:src="@drawable/image"
            android:scaleType="centerCrop"
            android:layout_marginEnd="@dimen/picMarginEnd"/>
        <RelativeLayout
            android:layout_width="@dimen/picSize"
            android:layout_height="@dimen/picSize">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/picSize"
                android:layout_height="@dimen/picSize"
                app:shapeAppearanceOverlay="@style/roundedImage"
                android:src="@drawable/image"
                android:scaleType="centerCrop"
                android:backgroundTint="@color/shadow"/>
            <RelativeLayout
                android:layout_width="@dimen/picSize"
                android:layout_height="@dimen/picSize"
                android:background="@drawable/gallery_last_pic">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="+15"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>