<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/complete_rounded_bg3"
    android:paddingStart="10dp"
    android:layout_marginVertical="10dp"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/restaurantInfos"
        android:paddingVertical="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Restaurant"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/secondaryColor"
            android:layout_marginTop="@dimen/retsMarginTop"
            android:maxLines="1"
            android:fontFamily="@font/nunito_bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/retsMarginTop">
            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="3.5"
                android:textColor="@color/starColor"
                android:textSize="16sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toEndOf="@id/rate">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_blur_star_24"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_blur_star_24"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:fontFamily="@font/nunito_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Where situate"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/secondaryColor"
            android:layout_marginTop="@dimen/retsMarginTop"/>
        <TextView
            android:fontFamily="@font/nunito_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Din in-Takeaway-Dilivery"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/secondaryColor"
            android:layout_marginVertical="@dimen/retsMarginTop"/>
    </LinearLayout>
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/food"
        app:shapeAppearanceOverlay="@style/roundedImage" />
</LinearLayout>