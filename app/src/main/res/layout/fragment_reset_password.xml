<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_enter_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="enter code"
        android:textColor="@color/text_color"
        android:textSize="28sp"
        android:textStyle="bold" />

    <View
        android:layout_width="50dp"
        android:layout_height="3dp"
        android:layout_below="@id/tv_enter_code"
        android:layout_marginStart="24dp"
        android:layout_marginTop="3dp"
        android:background="@color/blue_logo" />

    <ImageView
        android:id="@+id/iv_check_your_email_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_enter_code"
        android:layout_marginTop="48dp"
        android:src="@drawable/enter_code" />


    <EditText
        android:id="@+id/et_code"
        style="@style/edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_check_your_email_image"
        android:padding="14dp"
        android:hint="Code"
        />

    <EditText
        android:id="@+id/et_new_password"
        style="@style/edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_code"
        android:padding="14dp"
        android:hint="The new password"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_up"
        style="@style/edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_new_password"
        android:layout_marginTop="48dp"
        android:background="@drawable/background_sign_in"
        android:padding="4dp"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>