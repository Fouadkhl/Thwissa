<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Profile.setting.EditProfile">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="@color/backgroundColor">
       <ImageView
           android:id="@+id/back_button"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_marginStart="@dimen/marginStart"
           android:layout_marginTop="20dp"
           android:clickable="true"
           android:src="@drawable/ic_baseline_arrow_back_24" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="@dimen/marginStart"
           android:layout_marginTop="30dp"
           android:text="@string/edit_profile"
           android:textColor="@color/textColor"
           android:textSize="@dimen/titleSize"
           android:textStyle="bold"/>
       <RelativeLayout
           android:layout_marginLeft="17.5dp"
           android:layout_width="127.5dp"
           android:layout_height="127.5dp"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="40dp">
           <com.google.android.material.imageview.ShapeableImageView
               android:layout_width="@dimen/imageSize"
               android:layout_height="@dimen/imageSize"
               android:src="@drawable/profile_pic"
               android:scaleType="centerCrop"
               app:shapeAppearanceOverlay="@style/roundedImage" />
           <androidx.cardview.widget.CardView
               android:layout_width="35dp"
               android:layout_height="35dp"
               android:layout_alignParentBottom="true"
               android:layout_alignParentEnd="true"
               android:outlineProvider="none"
               app:cardCornerRadius="7dp">
               <com.google.android.material.imageview.ShapeableImageView
                   android:layout_gravity="center"
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/ic_baseline_add_a_photo_24"
                   app:shapeAppearanceOverlay="@style/roundedImage"
                   android:background="@color/white"/>
           </androidx.cardview.widget.CardView>
       </RelativeLayout>
       <LinearLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="30dp"
           android:orientation="vertical">
           <!--username-->
           <EditText
               android:id="@+id/user_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/username"
               android:textStyle="bold"
               android:textColor="@color/textColor2"
               android:background="@null"
               android:layout_marginVertical="@dimen/marginVertical"
               android:layout_marginStart="10dp"
               android:inputType="text"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="3dp"
               android:background="@color/lineColor"/>
           <!--Phone-->
           <EditText
               android:id="@+id/phone_number"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/phone"
               android:textStyle="bold"
               android:textColor="@color/textColor2"
               android:background="@null"
               android:layout_marginVertical="@dimen/marginVertical"
               android:layout_marginStart="10dp"
               android:inputType="phone"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="3dp"
               android:background="@color/lineColor"/>
           <!--Date of Birth-->
           <EditText
               android:id="@+id/date_of_birth"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/date_of_birth"
               android:textStyle="bold"
               android:textColor="@color/textColor2"
               android:background="@null"
               android:layout_marginVertical="@dimen/marginVertical"
               android:layout_marginStart="10dp"
               android:focusable="false"
               android:inputType="date"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="3dp"
               android:background="@color/lineColor"/>
           <!--Location-->
           <EditText
               android:id="@+id/Location"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/location"
               android:textStyle="bold"
               android:textColor="@color/textColor2"
               android:background="@null"
               android:layout_marginVertical="@dimen/marginVertical"
               android:layout_marginStart="10dp"
               android:inputType="text"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="3dp"
               android:background="@color/lineColor"/>
       </LinearLayout>
       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/save"
           android:layout_width="250dp"
           android:layout_height="60dp"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="50dp"
           android:text="@string/save_changes"
           android:textAlignment="center"
           android:textColor="@color/white"
           android:textAllCaps="false"
           android:textSize="20sp"
           android:background="@drawable/background_sign_in"/>
   </LinearLayout>
</FrameLayout>