<?xml version="1.0" encoding="utf-8"?>



    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:maxHeight="300dp"
        android:clickable="true"
        android:background="@drawable/background_search">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:cardCornerRadius="9dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_top_site_and_near"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxHeight="250dp"
                    app:shapeAppearanceOverlay="@style/round9"
                    android:scaleType="centerCrop"
                    android:src="@drawable/traveler_photo" />

                <ImageButton
                    android:id="@+id/ib_bookmark"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/ic_bookmark" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_near_to_you_and_top_sites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_home"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:text="place"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_near_to_you_and_top_sites"
        android:text="blida is place of roses , if you visit blida take a look at the rose of ..."/>
    </RelativeLayout>
