<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="190dp"
    android:layout_height="125dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:background="@drawable/topratedbg"
    >
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginTop="5dp"
            android:layout_width="180dp"
            android:layout_height="100dp"
            app:shapeAppearanceOverlay="@style/rounded"
            android:id="@+id/tripImageView"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />

        <RelativeLayout
            android:layout_width="185dp"
            android:layout_height="20dp"
            android:layout_below="@id/tripImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="7dp">

                <TextView
                    android:id="@+id/tripTextView"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_toEndOf="@+id/tripTextView"
                    android:src="@drawable/ic_baseline_star_24" />
                <TextView
                    android:id="@+id/tripRating"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/star"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />
        </RelativeLayout>
</RelativeLayout>
