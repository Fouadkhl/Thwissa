<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.homefragment.overview.fragments.TipsFragment"
    android:background="@color/backgroundColor2">
    <TextView
        android:layout_marginTop="35dp"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:textColor="@color/secondaryColor"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/reviews"/>
    <LinearLayout
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/place_rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            tools:text="4.2"
            android:textColor="@color/starColor"
            android:textStyle="bold"/>
        <RatingBar
            android:layout_marginStart="5dp"
            android:id="@+id/place_rating_bar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1"
            android:theme="@style/RatingBar" />
    </LinearLayout>
    <TextView
        android:id="@+id/place_reviews_number"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:textColor="@color/starColor"
        tools:text="@string/_128_reviews"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_bold"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviewsRecycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="10dp"
        tools:listitem="@layout/item_tip"/>
</LinearLayout>