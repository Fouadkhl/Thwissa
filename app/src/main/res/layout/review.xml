<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/complete_rounded_bg3"
    android:orientation="vertical"
    android:layout_marginVertical="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile_pic"
            app:shapeAppearanceOverlay="@style/circlePic"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:text="Mohammed Ali"
                    android:textSize="14sp"
                    android:textColor="@color/secondaryColor"
                    android:textStyle="bold"
                    android:fontFamily="@font/nunito_bold"/>
                <RelativeLayout
                    android:layout_gravity="bottom"
                    android:id="@+id/review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="3.5"
                        android:textColor="@color/starColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_toEndOf="@id/rate">
                        <ImageView
                            android:layout_width="@dimen/starSize2"
                            android:layout_height="@dimen/starSize2"
                            android:src="@drawable/ic_baseline_star_24"/>
                        <ImageView
                            android:layout_width="@dimen/starSize2"
                            android:layout_height="@dimen/starSize2"
                            android:src="@drawable/ic_baseline_star_24"/>
                        <ImageView
                            android:layout_width="@dimen/starSize2"
                            android:layout_height="@dimen/starSize2"
                            android:src="@drawable/ic_baseline_star_24"/>
                        <ImageView
                            android:layout_width="@dimen/starSize2"
                            android:layout_height="@dimen/starSize2"
                            android:src="@drawable/ic_baseline_blur_star_24"/>
                        <ImageView
                            android:layout_width="@dimen/starSize2"
                            android:layout_height="@dimen/starSize2"
                            android:src="@drawable/ic_baseline_blur_star_24"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_gravity="top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wilaya"
                    android:text="@string/batna"
                    android:textColor="@color/normalTextColor"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_bold"/>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalTextColor"
                    android:id="@+id/date"
                    android:text="12 avril 2022"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/secondaryColor"
        android:text="@string/longText"/>
</LinearLayout>