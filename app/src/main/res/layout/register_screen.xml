<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="register please"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="36sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_traveler_register"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="0.5"
        android:outlineAmbientShadowColor="@color/blue_white"
        app:shapeAppearanceOverlay="@style/round"
        android:src="@drawable/images_1"
        app:layout_constraintEnd_toStartOf="@+id/iv_agency_register"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_agency_register"
        android:layout_width="0dp"
        android:layout_height="204dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        android:maxWidth="215dp"
        android:outlineAmbientShadowColor="@color/blue_white"
        android:scaleType="centerCrop"
        android:src="@drawable/images_2"
        app:layout_constraintBottom_toBottomOf="@+id/iv_traveler_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_traveler_register"
        app:layout_constraintTop_toTopOf="@+id/iv_traveler_register"
        app:layout_constraintVertical_bias="1.0"
        app:shapeAppearanceOverlay="@style/round" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_agency_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_sign_in"
        android:text="As an agency"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_traveler_register"
        app:layout_constraintEnd_toEndOf="@+id/iv_agency_register"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/iv_agency_register"
        app:layout_constraintTop_toTopOf="@+id/btn_traveler_register"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_traveler_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="as a traveler"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/background_sign_in"
        app:layout_constraintEnd_toEndOf="@+id/iv_traveler_register"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_traveler_register" />

</androidx.constraintlayout.widget.ConstraintLayout>