<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Profile.setting.SettingsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_arrow_back_24" />
        <TextView
            android:id="@+id/setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_button"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/back_button"
            android:text="@string/settings"
            android:textColor="@color/textColor2"
            android:textSize="25sp"
            android:textStyle="bold" />
        <View
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:background="@color/line_color"
            android:layout_below="@id/setting_title"
            android:layout_toEndOf="@id/back_button"
            android:id="@+id/setting_line"
            />
        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="90dp"
            android:layout_below="@id/setting_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/nightMode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layoutWidth"
                    android:layout_marginStart="@dimen/layoutMarginStart">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/iconContainer1"
                        android:layout_width="@dimen/layoutWidth"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/backgroundColor"
                        app:cardCornerRadius="@dimen/CardRaduis"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/nightModeIcon"
                            android:layout_width="@dimen/iconSize"
                            android:layout_height="@dimen/iconSize"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_brightness_6_24" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/iconContainer1"
                        android:text="@string/night_mode"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/titlesSize"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_width="@dimen/layoutWidth"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/layoutMarginStart"
                        android:src="@drawable/s3" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="@dimen/lineMarginHorizontal"
                    android:layout_marginTop="@dimen/lineMarginTop"
                    android:background="@color/line_color2" />
                <RelativeLayout
                    android:id="@+id/language"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layoutWidth"
                    android:layout_marginStart="@dimen/layoutMarginStart"
                    android:layout_marginTop="@dimen/layoutMarginTop">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/iconContainer2"
                        android:layout_width="@dimen/layoutWidth"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/language_bg"
                        app:cardCornerRadius="@dimen/CardRaduis"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/languageModeIcon"
                            android:layout_width="@dimen/iconSize"
                            android:layout_height="@dimen/iconSize"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_language_24" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/iconContainer2"
                        android:text="@string/language"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/titlesSize"
                        android:textStyle="bold" />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/languageArrow"
                        android:layout_width="@dimen/layoutWidth"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/layoutMarginStart"
                        android:background="@color/backgroundColor"
                        android:src="@drawable/ic_baseline_navigate_next_24"
                        app:shapeAppearanceOverlay="@style/rounded" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/languages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layoutMarginStart"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/layoutMarginStart"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/arabicLanguage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_search"
                        android:maxHeight="@dimen/languagesTextViewMaxHeight"
                        android:paddingVertical="10dp"
                        android:text="@string/arabic"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/languageTextSize" />
                    <TextView
                        android:id="@+id/FrenchLanguage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxHeight="@dimen/languagesTextViewMaxHeight"
                        android:paddingVertical="10dp"
                        android:text="@string/french"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/languageTextSize" />
                    <TextView
                        android:id="@+id/EnglishLanguage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxHeight="@dimen/languagesTextViewMaxHeight"
                        android:paddingVertical="10dp"
                        android:text="@string/english"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/languageTextSize" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="@dimen/lineMarginHorizontal"
                    android:layout_marginTop="@dimen/lineMarginTop"
                    android:background="@color/line_color2" />
                <RelativeLayout
                    android:id="@+id/privacy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layoutWidth"
                    android:layout_marginStart="@dimen/layoutMarginStart"
                    android:layout_marginTop="@dimen/layoutMarginTop">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/iconContainer3"
                        android:layout_width="@dimen/layoutWidth"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/privacy_bg"
                        app:cardCornerRadius="@dimen/CardRaduis"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/privacyModeIcon"
                            android:layout_width="@dimen/iconSize"
                            android:layout_height="@dimen/iconSize"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_privacy_tip_24" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/iconContainer3"
                        android:text="@string/privacy"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/titlesSize"
                        android:textStyle="bold" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/privacyArrow"
                        android:layout_width="@dimen/layoutWidth"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/layoutMarginStart"
                        android:background="@color/backgroundColor"
                        android:src="@drawable/ic_baseline_navigate_next_24"
                        app:shapeAppearanceOverlay="@style/roundedSetting" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/privacyChoices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layoutMarginStart"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/layoutMarginStart"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/changePassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_search"
                        android:maxHeight="@dimen/languagesTextViewMaxHeight"
                        android:paddingVertical="10dp"
                        android:text="@string/change_password"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/languageTextSize"
                        android:layout_marginEnd="25dp"/>
                    <TextView
                        android:background="@drawable/background_search"
                        android:id="@+id/changeEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxHeight="@dimen/languagesTextViewMaxHeight"
                        android:paddingVertical="10dp"
                        android:text="@string/change_e_mail"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/languageTextSize" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="@dimen/lineMarginHorizontal"
                    android:layout_marginTop="@dimen/lineMarginTop"
                    android:background="@color/line_color2" />
                <RelativeLayout
                    android:id="@+id/support"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layoutWidth"
                    android:layout_marginStart="@dimen/layoutMarginStart"
                    android:layout_marginTop="@dimen/layoutMarginTop">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/iconContainer4"
                        android:layout_width="@dimen/layoutWidth"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/support_bg"
                        app:cardCornerRadius="35dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/supportModeIcon"
                            android:layout_width="@dimen/iconSize"
                            android:layout_height="@dimen/iconSize"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_contact_support_24" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/iconContainer4"
                        android:text="@string/support"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/titlesSize"
                        android:textStyle="bold" />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/layoutWidth"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/layoutMarginStart"
                        android:background="@color/backgroundColor"
                        android:src="@drawable/ic_baseline_navigate_next_24"
                        app:shapeAppearanceOverlay="@style/roundedSetting" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="@dimen/lineMarginHorizontal"
                    android:layout_marginTop="@dimen/lineMarginTop"
                    android:background="@color/line_color2" />
                <RelativeLayout
                    android:id="@+id/help"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layoutWidth"
                    android:layout_marginStart="@dimen/layoutMarginStart"
                    android:layout_marginTop="@dimen/layoutMarginTop">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/iconContainer5"
                        android:layout_width="@dimen/layoutWidth"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/support_bg"
                        app:cardCornerRadius="35dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/helpModeIcon"
                            android:layout_width="@dimen/iconSize"
                            android:layout_height="@dimen/iconSize"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_help_center_24" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/iconContainer5"
                        android:text="@string/help"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/titlesSize"
                        android:textStyle="bold" />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/layoutWidth"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/layoutMarginStart"
                        android:background="@color/backgroundColor"
                        android:src="@drawable/ic_baseline_navigate_next_24"
                        app:shapeAppearanceOverlay="@style/roundedSetting" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="@dimen/lineMarginHorizontal"
                    android:layout_marginTop="@dimen/lineMarginTop"
                    android:background="@color/line_color2" />
                <RelativeLayout
                    android:id="@+id/rate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layoutWidth"
                    android:layout_marginStart="@dimen/layoutMarginStart"
                    android:layout_marginTop="@dimen/layoutMarginTop">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/iconContainer6"
                        android:layout_width="@dimen/layoutWidth"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/language_bg"
                        app:cardCornerRadius="35dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/rateModeIcon"
                            android:layout_width="@dimen/iconSize"
                            android:layout_height="@dimen/iconSize"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_star_24" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/iconContainer6"
                        android:text="@string/rate"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/titlesSize"
                        android:textStyle="bold" />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/layoutWidth"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/layoutMarginStart"
                        android:background="@color/backgroundColor"
                        android:src="@drawable/ic_baseline_navigate_next_24"
                        app:shapeAppearanceOverlay="@style/roundedSetting" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</FrameLayout>